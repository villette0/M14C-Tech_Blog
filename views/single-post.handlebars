<div>
    <div class="post-container">
        <h2>{{title}}</h2>
        <h3>Created by {{user.username}} on {{format_date date_created}}</h3>
        <p>{{contents}}</p>
    </div>

    <div class = "comments">
    <h4>Comments</h4>
    {{!view all of the post's comments --}}
    {{#if comments.length}}
    {{#each comments as |comment|}}
    <p>{{comment.comment}} by {{comment.user.username}} on {{format_date comment.date_created}}</p>
    {{/each}}
    </div>
    {{/if}}
</div>



